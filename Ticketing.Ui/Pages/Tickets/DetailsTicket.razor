@page "/tickets/{Id:int}"
@using Ticketing.Ui.Models
@inject HttpClient Http
@inject NavigationManager Navigation

<h3>Détail du ticket #@Id</h3>

@if (ticket == null)
{
    <p>Chargement...</p>
}
else
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@ticket.Title</h5>
            <p class="card-text">@ticket.Description</p>
            <p><strong>Status :</strong> @ticket.GetStatusText()</p>
            <p><strong>Créé le :</strong> @ticket.CreatedAt.ToString("g")</p>
        </div>
    </div>

    <div class="mt-3">
        <button @onclick="GoBack" class="btn btn-secondary">Retour</button>
        <button @onclick="ShowConfirm" class="btn btn-danger ms-2">Supprimer</button>
        <a href="/tickets/@ticket.Id/edit" class="btn btn-warning ms-2">Modifier</a>
    </div>

    @if (showConfirm)
    {
        <div class="modal" style="display:block; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000;">
            <div class="modal-dialog" style="position: relative; top: 20%;">
                <div class="modal-content">
                    <div class="modal-body">
                        Voulez-vous vraiment supprimer ce ticket ?
                    </div>
                    <div class="modal-footer">
                        <button @onclick="CancelConfirm" class="btn btn-secondary">Annuler</button>
                        <button @onclick="ConfirmDelete" class="btn btn-danger">Supprimer</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Section commentaires -->
    <h4 class="mt-4">Commentaires (@(comments?.Count ?? 0))</h4>

    @if (comments == null)
    {
        <p>Chargement des commentaires...</p>
    }
    else if (comments.Count == 0)
    {
        <p>Aucun commentaire.</p>
    }
    else
    {
        @foreach (var c in comments)
        {
            <div class="card mb-2">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Anonyme • @c.CreatedAt.ToShortDateString()</h6>
                    <p class="card-text">@c.Content</p>
                </div>
            </div>
        }
    }

    <!-- Formulaire d'ajout -->
    <EditForm Model="@newComment" OnValidSubmit="AddComment" class="mt-3">
        <div class="mb-3">
            <InputTextArea @bind-Value="newComment.Content" class="form-control" rows="3" placeholder="Écrivez un commentaire..." />
        </div>
        <button type="submit" class="btn btn-primary" disabled="@string.IsNullOrWhiteSpace(newComment.Content)">
            Ajouter
        </button>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }
    private Ticket? ticket;
    private List<Comment>? comments;
    private CommentFormModel newComment = new();
    private bool showConfirm = false;

    protected override async Task OnInitializedAsync()
    {
        ticket = await Http.GetFromJsonAsync<Ticket>($"/api/tickets/{Id}");
        if (ticket == null)
        {
            Navigation.NavigateTo("/tickets");
            return;
        }

        comments = await Http.GetFromJsonAsync<List<Comment>>($"/api/tickets/{Id}/comments");
    }

    void GoBack() => Navigation.NavigateTo("/tickets");

    async Task Delete()
    {
        await Http.DeleteAsync($"/api/tickets/{Id}");
        Navigation.NavigateTo("/tickets");
    }

    void ShowConfirm() => showConfirm = true;
    void CancelConfirm() => showConfirm = false;
    async Task ConfirmDelete()
    {
        showConfirm = false;
        await Delete();
    }

    private async Task AddComment()
    {
        if (string.IsNullOrWhiteSpace(newComment.Content)) return;

        await Http.PostAsJsonAsync($"/api/tickets/{Id}/comments", new
        {
            content = newComment.Content
        });

        // Recharger les commentaires
        comments = await Http.GetFromJsonAsync<List<Comment>>($"/api/tickets/{Id}/comments");
        newComment = new(); // réinitialiser
    }

    private class CommentFormModel
    {
        public string Content { get; set; } = string.Empty;
    }
}